        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .editproduto h2 {
        margin-bottom: 20px;
        color: #333;
        text-align: center;
    }

    .form-container2 {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
        width: 100%;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        flex: 1;
        min-width: calc(50% - 10px);
    }

    .form-group label {
        margin-bottom: 5px;
        color: black;
    }

    .form-group input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-sizing: border-box;
    }

    .botao-container {
        display: flex;
        justify-content: left;
        width: 100%;
